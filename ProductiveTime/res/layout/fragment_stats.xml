<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lt.karolio.productivetime.StatsFragment"
    android:background="@color/background_color"
    android:paddingBottom="90dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/year"
        android:text="@string/year"
        android:textSize="30sp"
        android:textColor="@color/text_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ring"
        android:text="@string/count_zero"
        android:textSize="45sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:id="@+id/count"
        android:layout_above="@+id/statsListView"
        android:layout_centerHorizontal="true" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsListView"
        android:divider="@android:color/transparent"
        android:dividerHeight="7.0sp"
        tools:listitem="@layout/stats_item"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>